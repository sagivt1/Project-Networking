@model Networking_Project.Dal.MoviesAndHallsDal


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3><p style="text-align:left">@ViewData["msg"]</p></h3>

@using (Html.BeginForm("AddShow", "Admin", FormMethod.Post))
{
    <div class="col-md-offset-2 col-md-10">
        <select name="MovieName" >
            <option selected value="0">---Select---</option>
            @{
                foreach (var movie in Model.Movies.MyList)
                {
                    <option value="@movie.MovieName">@movie.MovieName</option>
                }
            }
        </select >
        <br /><br />
    </div>

    <div class="col-md-offset-2 col-md-10">
        <select name="hallId" >
            <option selected value="0">---Select---</option>
            @{
                foreach (var hall in Model.Halls.MyList)
                {
                    <option value="@hall.ID">@hall.ID</option>
                }
            }
        </select>
        <br /><br />
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input id="date" type="datetime-local" name="time" value="@DateTime.Now.ToString()" />
        <br /><br />
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Admin Home Page", "AdminHomePage")
</div>
